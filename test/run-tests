#!/usr/bin/env emacs --script

(let ((current-directory (file-name-directory load-file-name)))
  (setq cloudstack-mode-test-path (expand-file-name "." current-directory))
  (setq cloudstack-mode-root-path (expand-file-name ".." current-directory)))

(add-to-list 'load-path cloudstack-mode-root-path)
(add-to-list 'load-path cloudstack-mode-test-path)

(require 'cloudstack-mode)
(require 'noflet)

(load (expand-file-name "test-helper.el" cloudstack-mode-test-path) nil t)
(dolist (test-file (or argv (directory-files cloudstack-mode-test-path t "-test.el$")))
  (load test-file nil t))

;; setup test environment
;; and run tests
(noflet ((cloudstack-mode-project-root () "/path/to/project")
         (cloudstack-mode-project-name () "project"))
        (ert-run-tests-batch-and-exit t))
